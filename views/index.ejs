<html>

<head>
    <title>Todo List</title>
</head>

<body>
    <h1>Todo List</h1>
    <form method="post" action="/todo">
        <input type="text" name="todo">
        <button type="submit">Add Todo</button>
    </form>
    <ul>
        <% todos.forEach(function(todo) { %>
            <li>
                <%= todo %>
            </li>
            <% }); %>
    </ul>
</body>

</html>